.container
  .row.row-cols-1.row-cols-md-1
  - @carmakers.each do |carmaker|
    .col-md-3
      .card
        = image_tag "#{carmaker.image}", class: "card-img-top", size: '320x400'
        .card-body.text-white.bg-dark
          %h3.card-title
            = link_to carmaker.maker, carmaker_path(carmaker), class: "card-title-title"
          %p.card-text 
            = carmaker.explanation
        .card-footer.text-white.bg-dark
          %p.card-createdat
            = "latest car info"
            .card-createdat__new-car
              .card-createdat__new-car__car
                = "#{carmaker.cars.order("cars.created_at desc").first&.car_type}"  
              .card-createdat__new-car__date
                = "added at #{carmaker.cars.order("cars.created_at desc").first&.created_at&.strftime('%Y/%m/%d')}"
              
          
              
              
            
           
          

            
           
