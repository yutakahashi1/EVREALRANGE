.container
  #account-page.account-page
    .account-page__inner.clearfix
      .account-page__inner--left.account-page__header
        %h2 Create Account
        %h5 create new account
        = render "devise/shared/links"
      .account-page__inner--right.user-form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            .field-label
              = f.label :nickname
            .field-input
              = f.text_field :nickname, autofocus: true
          .field
            .field-label
              = f.label :email
            .field-input
              = f.email_field :email
          .field
            .field-label
              = f.label :password
              %i (英数字8文字以上)
            .field-input
              = f.password_field :password, autocomplete: "off"
          .field
            .field-label
              = f.label :password_confirmation
            .field-input
              = f.password_field :password_confirmation, autocomplete: "off"
          
          .field
            .field-label
              = f.label :carmaker_id
            .field-input
              = f.select :carmaker_id, Carmaker.all.map { |carmaker| [carmaker.maker, carmaker.id] }, {prompt: "メーカーを選択"}, {class: "form-control"}

          .field
            .field-label
              = f.label :car_id
            .field-input
              = f.select :car_id, Car.all.map { |car| [car.car_type, car.id] }, {prompt: "車種を選択"}, {class: "form-control"}

          .actions
            = f.submit "Create Account", class: 'btn btn-primary'
