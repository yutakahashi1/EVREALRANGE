        = link_to "EV owner", root_path(anchor: "body3"), class: "toppage-exp__user__user"

.body1
  .swiper-container
    .swiper-wrapper
      .swiper-slide 
        = image_tag "nissan_top_image.jpg", class: "swiper-class1"
      .swiper-slide
        = image_tag "Tesla-Family-Crop-1920px.jpg", class: "swiper-class1"
      .swiper-slide 
        = image_tag "porsche.image.jpg", class: "swiper-class1"
      .swiper-slide 
        = image_tag "Tesla-Model-S-X-3-hero.jpg", class: "swiper-class1"
      
