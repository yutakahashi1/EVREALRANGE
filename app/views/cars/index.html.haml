  %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/Swiper/5.3.7/js/swiper.min.js"}


#body2.body2
  = image_tag "pw01_tesla0903-mdayside.jpg", class: "toppage-image2"
  .toppage-image2__text
    = "You can check the real range of all Electric Vehicles in the world."
    .toppage-exp2
      .toppage-exp__viewer
        = link_to "Check EV Real Range", carmakers_path, class: "toppage-exp__viewer__viewer2"

#body3.body3
  = image_tag "23093824281_o.jpg", class: "toppage-image3"
  .toppage-image3__text
    = "You can share the Real Range of your EV to contribute the sustainable world."
    - if user_signed_in?
      .toppage-exp3
        .toppage-exp__viewer
          = link_to "Share Real Range", new_post_path, class: "toppage-exp__viewer__viewer"
        .toppage-exp__user
          = link_to "Your Page", user_path(current_user), class: "toppage-exp__user__user"
    - else
      .toppage-exp3
        .toppage-exp__viewer
          = link_to "Check Real Range", carmakers_path, class: "toppage-exp__viewer__viewer"
        .toppage-exp__user
          = link_to "Sign up", new_user_registration_path, class: "toppage-exp__user__user"

:javascript
  var mySwiper = new Swiper('.swiper-container', {
    loop: true,
    effect: "fade",
    //slidesPerView: 3,
    autoplay: {
    delay: 5000,
    speed: 10000,
    stopOnLastSlide: false,
    disableOnInteraction: false,
    reverseDirection: false
    },
    navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev'
    },
    pagination: {
    el: '.swiper-pagination',
    type: 'bullets',
    clickable: true
    }
    });
