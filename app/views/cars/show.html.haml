.container
  .container_car
    = @car.car_type
  = image_tag "#{@car.image}", class: "cars-image"
  .carsTable 
    %table
      %th
        WLTP
      %td
        = "#{@car.WLTP_range}km"
    %table
      %th
        EPA
      %td
        = "#{@car.EPA_range}km"
    - @posts.each do |post| 
      %table
        %th
          = "#{post.user.nickname}"
          â€™s
          %br Projected Range   
        %td
